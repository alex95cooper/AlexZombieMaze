<Page x:Class="AlexMaze.MazePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlexMaze"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="500"
      Title="MazePage" Loaded="Page_Loaded">

    <Grid x:Name="GamePageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Border Width="220" BorderThickness="5" BorderBrush="ForestGreen">
                <TextBlock Text="TextBlock" VerticalAlignment="Stretch"/>
            </Border>
            <Border Width="140" BorderThickness="5" BorderBrush="Orange">
                <TextBlock Text="TextBlock" VerticalAlignment="Stretch"/>
            </Border>
            <Border Width="125" BorderThickness="5" BorderBrush="Yellow">
                <TextBlock Text="TextBlock" VerticalAlignment="Stretch"/>
            </Border>
        </StackPanel>

        <Grid x:Name="MazeGrid" Grid.Row="1"/>
    </Grid>
</Page>
